class Solution:
    def getMinDiff(self, arr, k):
        arr.sort()
        n = len(arr)
        ans = arr[n-1] - arr[0]

        for i in range(1,n):
            if arr[i] - k < 0:
                continue

            min_height = min(arr[0]+k, arr[i]-k)
            max_height = max(arr[n-1]-k, arr[i-1] + k)

            ans = min(ans, max_height - min_height)
        return ans

#we are passing two arguments for object
arr = list(map(int, input("Enter array elements:").split()))
k = int(input("Enter the value of k:"))

#creating a object
obj = Solution()

#storing object with argumnents in variabel
result = obj.getMinDiff(arr, k)
print(result)

